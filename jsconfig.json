{
  "compilerOptions": {
    "baseUrl": ".", // Tells the editor where to find your source files
    "jsx": "react", // Specifies the JSX mode
    "module": "commonjs",
    "target": "es2016",
    "checkJs": true // Enable semantic checks in JavaScript files
  },
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
